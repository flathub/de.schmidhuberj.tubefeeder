{
    "app-id": "de.schmidhuberj.tubefeeder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "tubefeeder",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-data/tubefeeder:create",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/tubefeeder/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "66b43c36cf1017c878762007373964a096b3d2a5"
                }
            ]
        },
        {
            "name": "tubefeeder",
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-xz",
                    "url": "https://gitlab.com/schmiddi-on-mobile/pipeline/-/package_files/130313922/download",
                    "sha256": "f6e90f6e8aecf99a7a592d9623102e7376005ede69dab5f8b495ed53c51a9aef"
            		}, 
            		{
            		    "type": "patch",
            		    "path": "player_downloader.diff"
            		}
            ]
        }
    ]
}
