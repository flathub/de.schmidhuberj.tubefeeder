{
    "app-id": "de.schmidhuberj.tubefeeder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        },
        "com.github.rafostar.Clapper.Enhancers": {
            "version": "stable",
            "directory": "extensions/clapper/enhancers",
            "add-ld-path": "lib",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "command": "tubefeeder",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=all",
        "--share=network",
        "--filesystem=xdg-data/tubefeeder:create",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Flatpak",
        "--own-name=org.mpris.MediaPlayer2.tubefeeder",
        "--env=CLAPPER_ENHANCERS_PATH=/app/extensions/clapper/enhancers/plugins",
        "--env=PYTHONPATH=/app/extensions/clapper/enhancers/python/site-packages"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/tubefeeder/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        "lib/blueprint-compiler.json",
        "lib/libpeas.json",
        "lib/clapper.json",
        {
            "name": "tubefeeder",
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-xz",
                    "url": "https://gitlab.com/schmiddi-on-mobile/pipeline/-/package_files/172598661/download",
                    "sha256": "6bb1127847888fa428788296b2ae149c1db010d527d345430d4d6ebba6b00649"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg",
        "mkdir -p /app/extensions/clapper/enhancers"
    ]
}
