{
    "app-id": "de.schmidhuberj.tubefeeder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "command": "tubefeeder",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-data/tubefeeder:create",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Flatpak",
        "--own-name=org.mpris.MediaPlayer2.tubefeeder"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/tubefeeder/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "8e10fcf8692108b9d4ab78f41086c5d7773ef864"
                }
            ]
        },
        {
            "name": "gtuber",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dvapi=disabled",
                "-Dgst-gtuber=enabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/gtuber.git",
                    "commit": "f5a64d442c18ae2fa732a851ccb4859c8a45d944"
                }
            ]
        },
        {
            "name": "clapper",
            "buildsystem": "meson",
            "config-opts": [
                "-Dclapper=enabled",
                "-Dclapper-gtk=enabled",
                "-Dclapper-app=disabled",
                "-Dintrospection=enabled",
                "-Dgluploader=disabled",
                "-Drawimporter=disabled",
                "-Dvapi=enabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/clapper.git",
                    "tag": "0.6.1"
                }
            ]
        },
        {
            "name": "tubefeeder",
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-xz",
                    "url": "https://gitlab.com/schmiddi-on-mobile/pipeline/-/package_files/148051874/download",
                    "sha256": "1d42100e168ef94b709e70018f39b6fb79fc50d659538495d9f3e0cdf12d0865"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ]
}
